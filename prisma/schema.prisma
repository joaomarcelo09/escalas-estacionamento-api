generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id
  name     String
  email    String
  password String
}

model Sector {
  id        String     @id
  name      String
  id_seeder String
  quantity  Int
  type      TypeSector @default(IN)
}

model GroupScale {
  id   String @id
  name String
}

model Scale {
  id       String      @id
  id_group_scale String
  period   ScalePeriod @default(NIGHT)
}

model ScaleSector {
  id String @id
  id_scale String
  id_sector String
}

model SectorCooperator {
  id String @id
  id_sector String 
  id_cooperator String
}

model Cooperators {
  id        String          @id
  name      String
  telephone String
  type      CooperatorsType @default(COOPERATOR)
}

enum CooperatorsType {
  DEACUN
  COOPERATOR
}

enum TypeSector {
  IN
  OUT
}

enum ScalePeriod {
  NIGHT
  MORNING
}
